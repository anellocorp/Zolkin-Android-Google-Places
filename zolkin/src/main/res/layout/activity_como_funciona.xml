<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/br.com.zolkin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_geral" />
    
    
	<ImageView
        android:layout_width="125dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo_zolkin"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vpImages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:layout_marginBottom="70dp" />
    
    <!-- 
    <include layout="@layout/tutorial_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"/>
	 -->

        <TextView
            android:id="@+id/tvBtPularIntro"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="Pular introdução"
            android:textColor="@color/zl_purple"
            android:textSize="12dp"
            android:background="@drawable/bt_pular_intro_bg" />


    <custom:com.imd.zolkin.custom.PageControlView
        android:id="@+id/pcImages"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        custom:dotRadiusSp="4" 
        android:layout_marginLeft="2dp"/>

</FrameLayout>