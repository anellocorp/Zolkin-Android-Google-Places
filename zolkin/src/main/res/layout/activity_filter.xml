<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/zl_purple" >

        <com.innovattic.font.FontTextView
            app:font="Gotham-Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Filtre sua pesquisa"
            android:textColor="@color/zl_green"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/btVoltar"
            android:layout_width="40dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical|left"
            android:scaleType="center"
            android:src="@drawable/bt_voltar" />

        <ImageView
            android:id="@+id/btLocation"
            android:layout_width="23dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="8dp"
            android:src="@drawable/bt_pin"
            android:visibility="gone" />
    </FrameLayout>

    <ListView
        android:id="@+id/lvSubCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >
        <com.innovattic.font.FontTextView
            app:font="Gotham-Medium"
            android:layout_width="0dp"
            android:layout_weight="1"
        	android:layout_height="match_parent"
        	android:background="#c6c6c5"
        	android:text="LIMPAR"
        	android:textColor="@color/zl_green"
        	android:textStyle="normal"
        	android:gravity="center"
        	android:textSize="16dp" 
        	android:id="@+id/tvBtLimpar"/>
        <com.innovattic.font.FontTextView
            app:font="Gotham-Medium-Black"
            android:layout_width="0dp"
            android:layout_weight="1"
        	android:layout_height="match_parent"
        	android:background="@color/zl_purple"
        	android:text="FILTRAR"
        	android:textColor="@color/zl_green"
        	android:textStyle="normal"
        	android:gravity="center"
        	android:textSize="16dp"
        	android:id="@+id/tvBtFiltrar" />
    </LinearLayout>

</LinearLayout>