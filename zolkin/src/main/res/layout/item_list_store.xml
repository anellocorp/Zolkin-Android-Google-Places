<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="90dp"
	android:orientation="horizontal"
	android:padding="6dp"
	android:background="#FFFFFF" >

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="90dp"
		android:layout_weight="1"
		android:orientation="vertical">
		<com.innovattic.font.FontTextView
			app:font="Gotham-Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#592d7f"
			android:text="Forneria San Paolo - A..."
			android:textSize="19dp"
			android:textStyle="normal"
			android:id="@+id/tvName"
			android:singleLine="true"/>
		<com.innovattic.font.FontTextView
			app:font="Gotham-Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:text="até as"
			android:textSize="14dp"
			android:id="@+id/tvNeighborhood"
			android:singleLine="true"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="34dp"
			android:orientation="horizontal"
			>
			<ImageView
				android:layout_width="19dp"
				android:layout_height="29dp"
				android:src="@drawable/pin_zolkin"
				android:layout_marginTop="4dp"
				android:id="@+id/imgvPin"/>
			<com.innovattic.font.FontTextView
				app:font="Gotham-Light"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:textColor="#000000"
				android:text="3,0 km - R. Haddock Lobo, 1397"
				android:textSize="12dp"
				android:layout_gravity="bottom|left"
				android:id="@+id/tvStreetDistance"/>
		</LinearLayout>
	</LinearLayout>

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical">
		<ImageView
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:src="@drawable/badge_gnd"
			android:layout_gravity="center"
			android:scaleType="fitCenter"
			android:adjustViewBounds="true"
			android:id="@+id/imgvBadge"/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal">
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="2"
				android:orientation="horizontal"
				android:layout_gravity="center_horizontal|bottom"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="-4dp">
				<com.innovattic.font.FontTextView
					app:font="Gotham-Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/zl_green"
					android:text="30"
					android:textSize="22sp"
					android:layout_gravity="center_horizontal|bottom"
					android:id="@+id/tvPercentageDiscount"/>
				<com.innovattic.font.FontTextView
					app:font="Gotham-Medium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/zl_green"
					android:text="%"
					android:textSize="14sp"
					android:layout_gravity="center_horizontal|bottom"/>
			</LinearLayout>
			<com.innovattic.font.FontTextView
				app:font="Gotham-Light"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFF"
				android:text="até as"
				android:textSize="10sp"
				android:id="@+id/tvUntilText"/>
			<com.innovattic.font.FontTextView
				app:font="Gotham-Light"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFF"
				android:text="20h30"
				android:textSize="10sp"
				android:id="@+id/tvUntilTime"/>
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
