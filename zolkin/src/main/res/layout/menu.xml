<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A0000000"
            android:paddingRight="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#3d1666"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp" >

                        <com.innovattic.font.FontTextView 
                        app:font="Gotham-Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:layout_marginLeft="10dp"
                            android:text="Menu"
                            android:textColor="#28e694"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/btCloseMenu"
                            android:layout_width="20dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/bt_menu" />
                    </FrameLayout>

                    <com.innovattic.font.FontTextView 
                        app:font="Gotham-Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="bottom|left"
                        android:text="Bem-vindo"
                        android:textColor="#28e694"
                        android:textSize="14dp" />

                    <com.innovattic.font.FontTextView 
                        app:font="Gotham-Medium"
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Rodrigo Dovighi"
                        android:textColor="#ffecc5"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#13E4EA"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/icon_zolkin_pqn_noshadow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <com.innovattic.font.FontTextView 
                        app:font="Gotham-Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="bottom|left"
                            android:text="Saldo ZOLKINs"
                            android:textColor="#592d7f"
                            android:textSize="13dp" />

                        <com.innovattic.font.FontTextView 
                        app:font="Gotham-Medium"
                            android:id="@+id/tvSaldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="2.171,83"
                            android:textColor="#592d7f"
                            android:textSize="25dp" />
                    </LinearLayout>
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/llBtHome"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_home" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Home"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtPerfil"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_dados_cadastro" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Dados Cadastrais"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtExtrato"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_extratos" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Extrato"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtMensagens"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_message" />

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|left"
                                    android:text="Mensagens"
                                    android:textColor="#000000" />
                                
                                <TextView 
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginLeft="73dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="left|top"
                                    android:background="#FFFF0000"
                                    android:textColor="#FFFFFFFF"
                                    android:text="5"
                                    android:gravity="center"
                                    android:id="@+id/tvNewMessages" />
                            </FrameLayout>
                        </LinearLayout>
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtFavoritos"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_favoritos" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Favoritos"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtConvidarAmigos"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_convidar_amigos" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Convidar Amigos"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtCompartilhar"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_convidar_amigos" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Compartilhar"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtFaleConosco"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_fale_conosco" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Fale Conosco"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtFaq"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_faq" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="FAQ (Perguntas Frequentes)"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtComoFunciona"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_como_funciona" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Como Funciona"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtTermos"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_termos" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Termos e Condições Gerais"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />

                        <LinearLayout
                            android:id="@+id/llBtLogout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/bt_desconectar" />

                            <com.innovattic.font.FontTextView
                                style="@style/MenuTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="Desconectar Conta"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#EEEEEE" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </FrameLayout>