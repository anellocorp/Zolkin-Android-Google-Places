<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MenuTextStyle">
        <item name="font">Gotham-Medium</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="CadastroTextBoxStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/zl_purple</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/cadastro_text_box</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="font">Gotham-Light</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/zl_purple</item>
    </style>
    
    <style name="PerfilTextBoxStyle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#3d1666</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/perfil_text_box</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="font">Gotham-Light</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/zl_purple</item>
    </style>
    
    <style name="ActivityTitleTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/zl_green</item>
        <item name="android:textSize">19dp</item>
        <item name="font">Gotham-Medium</item>
    </style>
    
    <style name="PesquisaTextBoxStyle">
        <item name="android:background">@drawable/pesquisa_text_box</item>
    </style>

</resources>
